<% layout("/layouts/boilerplate") %>
<br>

<!-- Background color applied to full page -->
<div class="container-fluid min-vh-100" style="background-color: #f8f9fa; padding-top: 50px;">

  <div class="row justify-content-center">
    <div class="col-md-8 text-center">
      <h3 class="mb-4">Listing Details</h3>

      <div class="card shadow-lg p-3 bg-white rounded">
        <!-- Image with reduced size -->
        <img src="<%= listing.image.url %>" class="card-img-top mx-auto d-block mt-3"
             alt="listing_image" style="max-width: 250px; height: auto; border-radius: 10px;">
        
        <div class="card-body">
          <h5 class="card-title"><b><%= listing.title %></b></h5>
          <p class="card-text">
            <%= listing.description %> <br>
            <strong>Price:</strong> &#8377; <%= listing.priceFormatted %> <br>
            <strong>Location:</strong> <%= listing.location %>, <%= listing.country %>
          </p>
        </div>
      </div>

      <!-- Buttons centered below the card -->
      <div class="mt-3 d-flex justify-content-center gap-3">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-primary px-4">Edit</a>
        <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
          <button class="btn btn-danger px-4">Delete</button>
        </form>
      </div>
    </div>
  </div>

</div>
